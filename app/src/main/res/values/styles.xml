<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceHeadline5">@style/CustomHeadline5</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
        <item name="android:textAppearance">@style/CustomTextAppearance</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextAppearance" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
